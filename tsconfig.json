{
  "compilerOptions": {
    "target": "es6",
    "plugins": [{ "name": "next" }],
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "incremental": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "src",
    "tailwind.config.js",
    "jest.config.ts",
    "vite.config.ts",
    "globals.d.ts",
    "public/blogs",
    "./dist/types/**/*.ts",
    "./next-env.d.ts"
  ],
  "exclude": ["./node_modules"]
}
